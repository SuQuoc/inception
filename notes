nginx:  #container name
    depends_on:
      - wordpress
    image: nginx:inc
    build: ./requirements/nginx
    ports:
      - 443:443
    volumes:
      - wordpress-data:/var/www/html
    networks:
      - inception
    restart: always
  
  wordpress:
    image: wordpress:inc
    build: ./requirements/wordpress
    volumes:
     - wordpress-data:/var/www/html
    networks:
      - inception
    restart: always
    depends_on:
      - mariadb
    env_file:
    - .env